<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme with Sage Green color scheme -->
    <style name="Theme.ShoppingApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color - Sage Green -->
        <item name="colorPrimary">@color/md_light_green_700</item>
        <item name="colorPrimaryVariant">@color/md_light_green_900</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>

        <!-- Secondary brand color - Earthy complementary color -->
        <item name="colorSecondary">@color/md_brown_400</item>
        <item name="colorSecondaryVariant">@color/md_brown_600</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/md_light_green_900</item>

        <!-- Customize toolbar text color -->
        <item name="android:textColorPrimary">@color/md_white_1000</item>

        <!-- Toolbar search icon color -->
        <item name="android:textColorSecondary">@color/md_white_1000</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/md_grey_50</item>

        <!-- Card and surface colors -->
        <item name="colorSurface">@color/md_white_1000</item>
    </style>
</resources>